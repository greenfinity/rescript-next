{
  "name": "@greenfinity/rescript-next",
  "sources": [
    {
      "dir": "src",
      "subdirs": true
    },
    {
      "dir": "__tests__",
      "type": "dev",
      "subdirs": true
    }
  ],
  "jsx": {
    "version": 4,
    "mode": "classic"
  },
  "warnings": {
    "error": "+101"
  },
  "suffix": ".bs.mjs",
  "namespace": false,
  "bsc-flags": [
    "-bs-super-errors",
    "-bs-no-version-header"
  ],
  "package-specs": [
    {
      "module": "esmodule",
      "in-source": true
    }
  ],
  "bs-dependencies": [
    "@rescript/react",
    "rescript-logger",
    "@greenlabs/ppx-spice"
  ],
  "ppx-flags": [
    "rescript-logger/ppx",
    "@greenlabs/ppx-spice/ppx"
  ],
  "bs-dev-dependencies": [
    "@glennsl/rescript-jest"
  ]
}